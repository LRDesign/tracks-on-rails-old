   
  <% if ENV["RAILS_ENV"] == "development" %>
      <div id="debug">
        Debugging stuff (<%= ENV["RAILS_ENV"] %> mode):<br />
        <a href="#" onclick="Element.toggle('params_debug_info');return false">
        params</a> |
        <a href="#" onclick="Element.toggle('session_debug_info');return false">
        session</a> |
        <a href="#" onclick="Element.toggle('env_debug_info');return false">
        env</a> |
        <a href="#" onclick="Element.toggle('request_debug_info');return false">
        request</a> |
        <a href="#" onclick="Element.toggle('emails_debug_info');return false">
        emails</a> |
        <a href="#" onclick="Element.toggle('tab_debug_info');return false">
        tabs</a> |
        <fieldset id="params_debug_info" class="debug_info" style="display:none">
          <legend>params</legend>
          <%= debug(params) %>
        </fieldset>
        <fieldset id="session_debug_info" class="debug_info"
                  style="display:none">
          <legend>session</legend>
          <%= debug(session) %>
        </fieldset>
        <fieldset id="env_debug_info" class="debug_info" style="display: none">
          <legend>env</legend>
          <%= debug(request.env) %>
        </fieldset>
        <fieldset id="request_debug_info" class="debug_info" style="display: none">
          <legend>request</legend>
          <%= debug(request) %>
        </fieldset>
        <fieldset id="emails_debug_info" class="debug_info" style="display: none">
          <legend>emails</legend>
          <%= debug(ActionMailer::Base.deliveries) %>
        </fieldset>
           <fieldset id="tab_debug_info" class="debug_info"
                  style="display:none">
          <legend>session</legend>
          <%= debug(session[:preferred_tabs]) %>
        </fieldset>
      </div>
    
    <% end %>